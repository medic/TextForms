<?xml version="1.0" encoding="ISO-8859-1"?>
<splitpane i18n="true" name="panelManageContacts" orientation="horizontal" divider="450" weightx="1" weighty="1">
	<panel columns="2" weightx="1" weighty="1" scrollable="false" gap="5">
		<label name="labelQuestion" icon="/icons/search.png" for="searchContact" />
		<textfield name="searchContact" weightx="1" columns="0"
			action="searchByContact(this, tableContacts)" focusgained="focusGained(this)" focuslost="focusLost(this)"/>
		
		<panel name="panelContacts" border="false" weightx="1" weighty="1" colspan="2" gap="10" columns="1">
			<table name="tableContacts" selection="single" weightx="1" weighty="1"/>
		</panel>
		
		<panel colspan="2" columns="3" gap="5" weightx="1">
			<button name="buttonAddContact" icon="/icons/big_user_add.png" text="i18n.plugins.surveys.contact.add" action="addContact(tableContacts)" weightx="1" colspan="2"/>
			<button name="buttonEditContact" icon="/icons/big_user_edit.png" text="i18n.plugins.surveys.contact.edit" action="editContact(tableContacts)" weightx="1" enabled="false"/>
			<button name="buttonDeleteContact" icon="/icons/big_user_delete.png" text="i18n.plugins.surveys.contact.delete" action="showConfirmationDialog('deleteContact')" weightx="1" colspan="2" enabled="false"/>
		</panel>
	</panel>
	<panel gap="5" columns="1">
		<panel text="i18n.plugins.surveys.contact" columns="2" weightx="1" weighty="1" gap="10" border="true" top="8" left="8" right="8" bottom="8">
			<label name="labelName" text="i18n.plugins.surveys.name" icon="/icons/user.png" valign="top" />
			<label name="labelNameValue" height="40" weightx="1" font="bold 12"/>
			
			<label name="labelHospital" text="i18n.plugins.surveys.organization" icon="/icons/organization.png" valign="top" />
			<label name="labelHospitalValue" weightx="1" font="bold 12" />
			
			<label name="labelPhone" text="i18n.plugins.surveys.phone" icon="/icons/phone_number.png" valign="top" />
			<label name="labelPhoneValue" weightx="1" font="bold 12" />
			
			<label name="labelEmail" text="i18n.plugins.surveys.email" icon="/icons/email.png" valign="top" />
			<label name="labelEmailValue" weightx="1" font="bold 12" />
			
			<label name="labelAnswer" text="i18n.plugins.surveys.answer" icon="/icons/date.png" valign="top" />
			<label name="labelAnswerValue" weightx="1" font="bold 12" />
		</panel>
		<button name="buttonViewAnswers" icon="/icons/big_answers.png" text="i18n.plugins.surveys.view.answers" action="viewAnswers(tableContacts)" weightx="1" enabled="false"/>
	</panel>
</splitpane>