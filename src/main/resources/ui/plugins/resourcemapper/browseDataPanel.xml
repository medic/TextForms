<?xml version="1.0" encoding="ISO-8859-1"?>
<panel i18n="true" name="panelBrowseData" weightx="1" weighty="1" scrollable="false" columns="3" gap="5">
	<panel gap="5" weightx="1">
		<label name="labelField" text="i18n.plugins.resourcemapper.find.field" icon="/icons/search.png" />
		<textfield name="searchField" weightx="1" action="searchByField(this, tableField, buttonClear)"/>
		<button name="buttonClear" icon="/icons/cross.png" action="searchClear(searchField, tableField, this)" enabled="false"/>
	</panel>
	
	<panel gap="5" left="15">
		<textfield name="textDate" editable="false" enabled="false" columns="15"/>
		<button name="buttonDate" icon="/icons/date.png" action="showDateSelecter(textDate)"/>
    </panel>
    
    <panel gap="5" weightx="1" left="15">
    	<label name="labelSubmitter" text="i18n.plugins.resourcemapper.submitter" />
		<combobox name="comboSubmitter" editable="false" weightx="1" action="submitterChanged(this)"/>
	</panel>
	
	<table name="tableField" selection="single" colspan="3" weightx="1" weighty="1">
		<header>
			<column icon="/icons/keyword.png" text="i18n.plugins.resourcemapper.table.field" width="120" />
			<column icon="/icons/sms_receive.png" text="i18n.plugins.resourcemapper.table.response" width="210"/>
			<column icon="/icons/date.png" text="i18n.plugins.resourcemapper.table.date" width="150"/>
			<column icon="/icons/user_sender.png" text="i18n.plugins.resourcemapper.table.submitter" width="200"/>
		</header>
	</table>	
</panel>