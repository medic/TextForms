<?xml version="1.0" encoding="ISO-8859-1"?>
<panel i18n="true" name="panelBrowseData" columns="3" weightx="1" weighty="1" scrollable="false" gap="5">
	<panel gap="5" weightx="1">
		<label name="labelField" icon="/icons/search.png" for="searchField" />
		<textfield name="searchField" weightx="1" weighty="1"
			action="searchByField(this)" focusgained="textfieldFocusGained(this)" focuslost="textfieldFocusLost(this)"/>
	</panel>
	
	<panel gap="5" left="15" columns="3">
		<label text="i18n.plugins.resourcemapper.date" icon="/icons/date.png" for="textDate" />
		<textfield name="textDate" columns="15" action="dateChanged(this)" weighty="1" tooltip="DD/MM/YYYY"/>
		<button name="buttonDate" icon="/icons/date.png" action="showDateSelecter(textDate)"/>
	</panel>
    
    <panel gap="5" weightx="1" left="15">
    	<label name="labelSubmitter" text="i18n.plugins.resourcemapper.submitter" icon="/icons/user_sender.png" />
		<combobox name="comboSubmitter" editable="false" weightx="1" action="submitterChanged(this)"/>
	</panel>
	
	<panel name="panelFields" border="false" colspan="3" weightx="1" weighty="1" valign="fill" gap="10">
		<table name="tableFields" selection="single" weightx="1" weighty="1"/>
	</panel>
</panel>