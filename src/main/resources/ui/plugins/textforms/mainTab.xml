<?xml version="1.0" encoding="ISO-8859-1"?>
<tab i18n="true"  name="tabTextForms" icon="/icons/big_textforms.png" text="i18n.plugins.textforms.title">
    <panel name="panelTextForms" bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1" scrollable="false">
    	<panel weighty="1" columns="1">
    		<label name="labelTextForms" icon="/icons/header_textforms.png" valign="top" />
    		<label weighty="1"/>
			<button tooltip="i18n.tooltip.click.for.help" valign="bottom" icon="/icons/big_help.png" type="link" action="showHelpPage('textforms.htm')" />
		</panel>
		<splitpane orientation="horizontal" divider="170" weightx="1" weighty="1">
			 <panel name="panelMenu" weightx="1" weighty="1" columns="1" top="6" left="6" right="6" bottom="6" gap="5" scrollable="false">
			 	<label name="labelTasks" text="i18n.plugins.textforms.tasks" icon="/icons/status.png" weightx="1" />
			 	<list name="listTasks" selection="single" weightx="1" weighty="1" action="taskChanged(listTasks)" >
					<item text="i18n.plugins.textforms.manage.contacts" icon="/icons/users.png" property="value=people" selected="true" />
					<item text="i18n.plugins.textforms.manage.questions" icon="/icons/help.png" property="value=questions"/>
					<item text="i18n.plugins.textforms.manage.textforms" icon="/icons/report.png" property="value=textforms"/>
					<item text="i18n.plugins.textforms.browse.data" icon="/icons/browse.png" property="value=data"/>
					<item text="i18n.plugins.textforms.manage.options" icon="/icons/keyword.png" property="value=options"/>
				</list>
			</panel>
			<panel name="panelMainContent" weightx="1" weighty="1" top="6" left="6" right="6" bottom="6"/>
		</splitpane>	
	</panel>
</tab>
